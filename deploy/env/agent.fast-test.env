POLYMARKET_BTC_STREAM=chainlink
POLYMARKET_BTC_SYMBOL=BTCUSD
POLYMARKET_BTC_WINDOW=15m

AGENT_TEST_MODE=true
TEST_MODE_ROUND_SECONDS=90
TEST_MODE_ACTIVATION_LEAD_SECONDS=70

POLYMARKET_WS_ENABLED=true
POLYMARKET_MARKET_REFRESH_SECONDS=8
POLYMARKET_MOVE_THRESHOLD_PCT=1.5
POLYMARKET_MOVE_MIN_ABS_DELTA=0.015
POLYMARKET_MOVE_LOG_COOLDOWN_SECONDS=8

ROUND_SECONDS=900
ACTIVATION_LEAD_SECONDS=180
WS_PING_INTERVAL_SECONDS=15

DRY_RUN=true
AGENT_API_PORT=8080
MAX_TRADES_PER_ROUND=2
TRADE_COOLDOWN_SECONDS=5
