# Fast sanity profile (high signal, short cycles)
# Copy into .env for rapid end-to-end checks.

POLYMARKET_BTC_STREAM=chainlink
POLYMARKET_BTC_SYMBOL=BTCUSD
POLYMARKET_BTC_WINDOW=15m

AGENT_TEST_MODE=true
TEST_MODE_ROUND_SECONDS=90
TEST_MODE_ACTIVATION_LEAD_SECONDS=70

POLYMARKET_WS_ENABLED=true
POLYMARKET_MARKET_REFRESH_SECONDS=8
POLYMARKET_MOVE_THRESHOLD_PCT=1.5
POLYMARKET_MOVE_MIN_ABS_DELTA=0.015
POLYMARKET_MOVE_LOG_COOLDOWN_SECONDS=8

ROUND_SECONDS=900
ACTIVATION_LEAD_SECONDS=180
WS_PING_INTERVAL_SECONDS=15

DRY_RUN=true
AGENT_API_PORT=8080
MAX_TRADES_PER_ROUND=2
TRADE_COOLDOWN_SECONDS=5
PAPER_TRADE_NOTIONAL_USD=25
PAPER_ENTRY_SLIPPAGE_BPS=50
PAPER_DYNAMIC_SLIPPAGE_ENABLED=true
PAPER_DYNAMIC_SLIPPAGE_EDGE_FACTOR_BPS=25
PAPER_DYNAMIC_SLIPPAGE_CONFIDENCE_FACTOR_BPS=20
PAPER_DYNAMIC_SLIPPAGE_EXPIRY_FACTOR_BPS=30
PAPER_MAX_SLIPPAGE_BPS=200
PAPER_GAS_FEE_USD_PER_SIDE=0.05
PAPER_ADVERSE_SELECTION_BPS=30
PAPER_MIN_NOTIONAL_USD=1
PAPER_MIN_NET_EDGE_BPS=15
PAPER_EDGE_STRENGTH_TO_BPS=1000
